@model tasky.Models.TeamMember

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>TeamMember</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.name)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.email)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.email)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.tasks)
    </div>
    <div class="display-field">
        @if(Model.tasks != null) 
        {
            foreach (var task in Model.tasks)
            {
                @Html.ActionLink((string)task.Title, "Details", "Task", new {id = task.id}, null)
            }
        }
        else
        {
            <h3>Model.tasks is null</h3>
        }
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.hash)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.hash)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.salt)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.salt)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
