            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estimate_Hours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remaining_Hours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamMember)
        </td>
        <td></td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
