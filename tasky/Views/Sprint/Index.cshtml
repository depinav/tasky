@model IEnumerable<tasky.ViewModels.SprintViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Sprint Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="sprintIndexContainer">
    @foreach (var item in Model) {
        <table>
            <tr>
                <td><b>@Html.DisplayNameFor(model => model.title)</b></td>
                <td>@Html.DisplayFor(modelItem => item.title)</td>
            </tr>
            <tr>
                <td><b>@Html.DisplayNameFor(model => model.startDate)</b></td>
                <td>@Html.DisplayFor(modelItem => item.startDate)</td>
            </tr>
            <tr>
                <td><b>@Html.DisplayNameFor(model => model.endDate)</b></td>
                <td>@Html.DisplayFor(modelItem => item.endDate)</td>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.id })
                </td>
            </tr>
        </table>
        
        <ul id=@item.id class="storyContainers">

        </ul>
    }
</div>

@section Scripts {
    <script type="text/javascript">
        var sprintArray = @Html.Raw(Json.Encode(Model));
        var sprintCollection = new Backbone.Collection([]);

        _.each(sprintArray, function(items) {
            sprintCollection.add({sprintid: items.id, stories: new StoryList(items.stories)});

        })

        $(document).on("ready", function() {
           // console.log(sprintCollection);
            var storyTitleListView = new StoryTitleListView({items:sprintCollection, el:$(".sprintIndexContainer")});
            storyTitleListView.render();
        })

        $(function() {
            $( ".storyContainers" ).sortable({
                connectWith: ".storyContainers"
            }).disableSelection();
        });
    </script>
}